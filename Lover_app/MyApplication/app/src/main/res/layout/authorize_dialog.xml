<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/main_1"
        android:orientation="vertical"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:weightSum="8"
        android:layout_height="4dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="8"
            android:layout_height="1dp"
            android:background="#B5B5B5"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10sp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <ImageView android:layout_width="40sp"
            android:layout_height="40sp"
            android:background="#EEEED1"
            android:layout_marginLeft="20sp"
            android:id="@+id/image"
            android:src="@drawable/l_beijinggereng"
            android:textStyle="bold"
            android:scaleType="fitXY"/>
        <TextView android:textColor="#838B8B"
            android:layout_width="60sp"
            android:layout_height="40sp"
            android:id="@+id/text"

            android:text="222"
            android:textSize="17sp"
            android:gravity="center"
            />
        <TextView android:textColor="#838B8B"
            android:layout_width="60sp"
            android:layout_height="40sp"
            android:id="@+id/text2"
            android:textSize="17dp"
            android:text="222"
            android:gravity="center"
            />


    </LinearLayout>
    <TextView android:textColor="#607B8B"
        android:layout_marginTop="15sp"
        android:layout_width="match_parent"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:layout_height="wrap_content"
        android:id="@+id/id"
        android:text="222"
        android:textSize="15dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="15sp"
        android:layout_height="wrap_content">

        <TextView android:textColor="#EEA2AD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text3"
            android:textSize="13dp"
            android:text="222"
            android:gravity="left"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="30sp"
        android:background="#55EAEAEA"
        android:layout_marginLeft="15sp"
        android:layout_marginRight="15sp"
        android:layout_marginTop="20sp"
        >
        <TextView
            android:layout_width="25sp"
            android:background="@drawable/l_dianzao"
            android:id="@+id/praise"
            android:layout_marginLeft="20sp"
            android:layout_height="25sp" />
        <TextView
            android:layout_width="22sp"
            android:layout_marginTop="5sp"
            android:layout_marginLeft="70sp"
            android:background="@drawable/l_pinglun2"
            android:id="@+id/comment"
            android:layout_height="22sp" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/date"
            android:gravity="center"
            android:layout_marginLeft="70sp"
            android:textSize="11sp"
            android:layout_height="30sp" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:weightSum="8"
            android:layout_height="4dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="1dp"
                android:background="#B5B5B5"
                />
        </LinearLayout>
</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_below="@+id/main_1"
    android:layout_marginTop="20sp"
    android:weightSum="8"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/editText_comment"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_weight="6"
        android:background="@null"
        android:hint="亲评论点什么吧...."
        android:textColor="#6E6E6E"
        android:textColorHint="#6E6E6E"
        android:textSize="16sp"
        android:windowSoftInputMode="stateVisible|adjustPan" />

    <Button
        android:layout_marginLeft="0sp"
        android:layout_marginRight="10sp"
        android:layout_width="0sp"
        android:layout_weight="2"
        android:background="@drawable/button_style"
        android:text="评论"
        android:id="@+id/comment_button"
        android:textSize="16sp"
        android:layout_height="30sp" />
</LinearLayout>


</RelativeLayout>
