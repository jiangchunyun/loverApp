<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#ffffff"

>

    <ImageView
        android:src="@drawable/l_imgs"
        android:background="#ffffff"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="120dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="8"
        android:layout_marginTop="15dp"
        android:layout_height="40dp">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/l_yonghu3"
            android:layout_marginLeft="30dp"
            android:layout_height="40dp" />
        <EditText android:layout_width="0dp"
              android:layout_weight="5"
              android:layout_height="40dp"
            android:layout_marginLeft="10dp"

            android:hint="用户名"
            android:textSize="15dp"
            android:textColor="#787878"
            android:background="@null"
              android:id="@+id/edit1_login"
              android:layout_above="@+id/text2"
             />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
         android:gravity="center"
        android:layout_marginTop="5dp"
        android:weightSum="8"
        android:layout_height="4dp">
    <TextView
        android:layout_width="0dp"
        android:layout_weight="7"
        android:layout_height="1dp"
        android:background="#99FF6699"
        />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="8"
        android:layout_marginTop="30dp"
        android:layout_height="40dp">
    <TextView android:gravity="center"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="40dp"
              android:id="@+id/text2"
              android:background="@drawable/l_mima3"
              android:textColor="#767a7a"
              android:textSize="20dp"
              android:layout_marginLeft="30dp"
            />
    <EditText android:layout_width="0dp"
              android:layout_weight="5"
              android:layout_height="40dp"
              android:id="@+id/edit2_login"
              android:hint="密码"
              android:layout_marginLeft="10dp"
              android:textSize="15dp"
              android:background="@null"
              android:textColor="#787878"
              android:inputType="textPassword"
               />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:weightSum="8"
        android:layout_height="4dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="7"
            android:layout_height="1dp"
            android:background="#99FF6699"
            />
    </LinearLayout>
    <Button android:textColor="#ffffff"
            android:layout_width="300dp"
            android:background="@drawable/button_style"
            android:layout_height="40dp"
            android:textSize="23dp"
            android:text="登录"
           android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/button_login"
            android:layout_marginTop="50dp"
            />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="13dp"
        android:weightSum="10"
        android:layout_height="40dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="3"
            android:text="立即注册"
            android:id="@+id/register"
            android:layout_height="30dp" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="30dp" />
        <TextView
        android:layout_width="0dp"
        android:layout_weight="3"
            android:text="忘记密码？"
            android:gravity="right"
        android:layout_height="30dp" />


    </LinearLayout>
</LinearLayout>