<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/name_1_name_2"
        android:textColor="#ffffff"
        android:text="个人资料"
        android:textSize="16dp"
        android:background="@drawable/shape"
        android:gravity="center"
        android:layout_height="40sp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20sp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="100sp"
            android:layout_height="20dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="更换头像"/>
        <com.example.myapplication.personal.ZQImageViewRoundOval
            android:layout_width="100sp"
            android:layout_gravity="center"
            android:id="@+id/head_picture"
            android:layout_marginTop="5sp"
            android:src="@drawable/l_beijinggereng"
            android:layout_height="100sp" />

    <TextView
        android:layout_width="100sp"
        android:layout_height="30dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/name"
         android:text="用户名"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10sp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:layout_marginLeft="25sp"
                android:background="@drawable/p_friend" />

            <TextView
                android:id="@+id/lovername"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="3sp"
                android:layout_marginTop="10sp"
                android:gravity="left"
                android:text="情侣" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15sp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/end"
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginLeft="27sp"
                android:background="@drawable/p_location"
                android:gravity="center" />

            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/end"
                android:gravity="left"
                android:text="目前的位置" />
        </RelativeLayout>
    </LinearLayout>


</LinearLayout>